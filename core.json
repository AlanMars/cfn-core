      "Description" : "What is the environment type, e.g. alpha/beta/prod/test.",
      "Type": "String",
      "AllowedValues" : [ "alpha","beta","prod","test" ],
      "ConstraintDescription": "must be either alpha, beta, prod or test."
    },

