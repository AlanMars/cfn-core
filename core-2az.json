        "VpcId" : { "Ref" : "VPC" },
        "CidrBlock" : { "Ref" : "ApplicationSubnetCidrAZ1" },
        "AvailabilityZone" : { "Fn::Select" : [ "0", { "Fn::GetAZs" : "" } ] },
        "Tags" : [
